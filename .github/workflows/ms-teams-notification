name: 1. Send MS Teams Notification ðŸ‘¥
on: 
  workflow_dispatch:
  push:
    branches:    
      - main

jobs:
  notify-teams:
    runs-on: ubuntu-latest
    steps:
    - name: Create dummy artifact
      run: echo "This is a dummy artifact" > dummy.txt
      env:
        dummy_file: dummy.txt
      artifacts:
        paths:
          - dummy.txt
    
    - name: Notify MS Teams
      uses: actions/teams@v2
      with:
        message: "The artifact has been uploaded and can be found at ${{ steps.upload-artifact.outputs.artifact_url }}"
        webhook: ${{ secrets.MS_TEAMS_WEBHOOK_URL }}